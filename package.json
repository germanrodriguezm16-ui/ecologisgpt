{
  "name": "ecologist-gpt",
  "version": "1.0.0",
  "description": "Panel de gesti√≥n para Ecologist-GPT",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 8000 -o",
    "dev": "node scripts/dev-with-hotreload.js",
    "dev:simple": "npx http-server . -p 8000 -o",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "lint:check": "eslint js/**/*.js --max-warnings 0",
    "build": "npm run test",
    "build:strict": "npm run lint:check && npm run test",
    "deploy:staging": "bash deploy.sh staging",
    "deploy:production": "bash deploy.sh production",
    "smoke-tests": "jest --testPathPattern=smoke",
    "performance": "node monitoring/performance-monitor.js",
    "security": "npm audit --audit-level moderate",
    "monitor": "node monitoring/error-tracker.js",
    "quality": "npm run lint:check && npm run test:coverage && npm run security",
    "docs:update": "node scripts/docs-smart-update.js",
    "status": "node scripts/status.js",
    "verify": "node scripts/verify.js",
    "prepare": "husky"
  },
  "dependencies": {
    "flatpickr": "^4.6.13"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.0",
    "eslint-plugin-promise": "^6.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "puppeteer": "^21.6.0"
  },
  "lint-staged": {
    "js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
